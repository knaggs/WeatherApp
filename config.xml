<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.derekknaggs.weatherapp"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Weather App</name>

    <description>
        An example of using a simple weather API from metaweather.com
    </description>

    <author href="http://www.derekknaggs.com" email="knad1_14@uni.worc.ac.uk">
        Derek Knaggs
    </author>

    <plugin name="cordova-plugin-network-information" spec="1.0.1" source="pgb" />
	
	<!-- give access to all domains in the outside world -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

</widget>